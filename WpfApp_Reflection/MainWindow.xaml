<Window x:Class="WpfApp_Reflection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Reflection"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnOpenFile" Click="btnOpenFile_Click" Content="Open File" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="98" Height="51"/>
        <TextBox x:Name="tbxFilePath" HorizontalAlignment="Left" Height="51" Margin="124,60,0,0" TextWrapping="Wrap" Text="Here you will see the full path to the file." VerticalAlignment="Top" Width="645" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbxViewInfo" HorizontalAlignment="Left" Height="280" Margin="10,128,0,0" TextWrapping="Wrap" Text="Reflection result" VerticalAlignment="Top" Width="759"/>

    </Grid>
</Window>
